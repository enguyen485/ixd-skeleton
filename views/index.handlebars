<html>
<head>
	<title>Profile</title>
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/main.css" rel="stylesheet">
	<!-- icons stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<div id="navbar">
	<a href="favorite"><i id="btn" class="fa fa-heart fa-lg"></i></a>
	<a href="search"><i id="btn" class="fa fa-search fa-lg"></i></a>
	<a href="profile"><i id="btn" class="fa fa-user fa-lg"></i></a>
</div>
<div class="container">
		<a href="/"><button id="logout" class="btn logout"><i class="fa fa-sign-out fa-lg"></i></button></a><br><br>
		<div id="photo" class="profile">
			<img id="photo" class='img-responsive' src="http://hci.stanford.edu/courses/cs547/Resources/Pictures/klemmer_grad.jpg" />
			<h1 id="name">Nandini Kapa</h1>
			<p>San Diego, CA</p>
		</div>

		<hr>

		<div class="Information">

			<h3>Where have I been?</h3>

			{{#each LocationsVisited}}
				<div class ="Locations">
					<form id="deleteLocationForm" role="form" method="delete" action="/deleteLocation">
						<input type="text" readonly="readonly" id="Location" name="Location" value="{{Place}}">
						<input type="text" readonly="readonly" id="Date" name="Date" value="{{Date}}">
						<input class="btn" type="submit" value="X">
					</form>
				</div>
			{{/each}}
			<br><br>

			<form id="addLocationForm" role="form" method="get" action="/addLocation">
				<input type="text" id="locate" name="Location" placeholder="Location">
				<input type="date" id="date" name="Date" ><br><br>
				<input class="btn" type="submit" value="ADD">
			</form>

			<hr>
			<h3>Currently positive with COVID-19?</h3>
			<form id="positiveForm" role="form" method="update" action="/updateResult">
				<input class="btn" type="submit" id="Result" name="Result" value="YES">
				<input class="btn" type="submit" id="Result" name="Result" value="NO">
				
			</form>
			

			<hr>

			<a href="password"><button id="password" class="btn">CHANGE PASSWORD</button></a>
		</div>
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/introHCI.js"></script>
</body>
</html>
